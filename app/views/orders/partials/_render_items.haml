%tbody
  - obj.order_items.try(:each) do |item|
    %tr.tr
      %td
        = link_to "#{image_tag item.book.image_url :resize_to_cart} #{item.book.title}".html_safe, item.book
      %td.book_price= number_to_currency(item.book.price)
      %td.count
        - if qty_change
          %input.quantity-input{:id => "quantity_#{book.id}", :max => "100", :min => "1", :name => "quantity-input", :type => "number", :value => "#{item.quantity}"}/
        - else
          = item.quantity
      %td.total= number_to_currency(item.book.price * item.quantity.to_i)
