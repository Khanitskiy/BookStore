.col-md-6
  %h2.underlined-h2.add-margin-bot.mb12= t(:shipping_address)
  .row
    .col-md-8
      = show_errors(@shipping_address, :shipping_form)
      = form_for @shipping_address, url: address_path(current_user),  html: {class: "nifty_form", method: "patch"} do |f|
        .form-group.checkit
          = f.label :label, t(:use_billing_address)
          = f.check_box :checkbox, {:checked=>true}
          
        #shipping_address
          = render partial: "users/partials/billing_shipping", locals: {address: @shipping_address, form: 'shipping_form'.to_sym, type: 'shipping', resource: @resource, user: current_user, shipping: true, f: f}