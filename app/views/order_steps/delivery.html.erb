<div class="checkout">
  <%= render partial: "checkout_nav" %>

  <% if  @order_steps_form.errors.full_messages.any? %>
    <% @order_steps_form.errors.full_messages.each do |error_message| %>
    <%= error_message %> <br />
    <% end %>
  <% end %>

  <%= form_for @order_steps_form, url: wizard_path, html: { method: :put } do |f| %>
    <div class="col-md-8">
      <h2 class="margin-bot-add">Delivery type</h2>
      <div class="row">
        <div class="col-md-8">
          <%= f.fields_for(:delivery_type, @order_steps_form.order) do |order| %>
          <div class="radio">
            <%= order.radio_button :delivery, '5', checked: checked(5) %>Take from our office + $5.00<br />
          </div>
          <div class="radio">
           <%= order.radio_button :delivery, '10', checked: checked(10)  %>UPS two day + $10.00<br />
          </div>
          <div class="radio">
           <%= order.radio_button :delivery, '20', checked: checked(20) %>UPS one day + $20.00<br />
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <%= render partial: "order_summary" %>

    <div class="col-md-4 col-md-offset-8">
      <div class="form-group">
         <%= f.submit "Save and continue", name: 'commit',  class: "btn btn-success btn-lg" %>
      </div>
    </div>
      
  <% end %>

</div>