<div class="checkout">
  <%= render partial: "order_steps/partials/checkout_nav" %>
  <div class="row">
    <div class="col-md-12">
      <h2><%= t(:confirm) %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h3>
        <%= t(:shipping_address) %>
        <small><a href="<%= wizard_path(:address) %>"><%= t(:edit) %></a></small>
      </h3>
      <%= render partial: "orders/partials/address_data", locals: {address:@order_steps_form.billing_address} %>
    </div>
    <div class="col-md-3">
      <h3>
        <%= t(:billing_address) %>
        <small><a href="<%= wizard_path(:address) %>"><%= t(:edit) %></a></small>
      </h3>
      <%= render partial: "orders/partials/address_data", locals: {address:@order_steps_form.shipping_address} %>
    </div>
    <div class="col-md-3">
      <h3>
        <%= t(:shipments) %>
        <small><a href="<%= wizard_path(:delivery) %>"><%= t(:edit) %></a></small>
      </h3>
      <div><%= t('ups_two_day', number: number_to_currency(@order_steps_form.delivery.to_f)) %></div>
    </div>
    <div class="col-md-3">
      <h3>
        <%= t(:payment_information) %>
        <small><a href="<%= wizard_path(:payment) %>"><%= t(:edit) %></a></small>
      </h3>
      <div>**** **** **** <%= @order_steps_form.payment.number.split("").last(4).join("") %></div>
      <div><%= @order_steps_form.month %>/<%= @order_steps_form.year %></div>
    </div>
  </div>
  <%= render partial: "order_steps/partials/complete_confirm_footer", locals: { complete: false  } %>
</div>