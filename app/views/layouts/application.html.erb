<!DOCTYPE html>
<html>
<head>
  <title>Bookstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body style="position: relative;">

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <span class="navbar-brand" href="<%= root_path %>">The Bookstore</span>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li <%= cp(root_path) %>><%= link_to "HOME", root_path %></li>
        <li <%= cp(books_path) %>><%= link_to "SHOP", books_path %></li>
        <form class="navbar-form navbar-left" action="/shop/search" role="search" method="get">
          <div class="form-group">
            <input type="text" name="value" value="<%= params[:value] if params[:action] == "search" %>" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Search</button>
        </form>
        <li class="cart-lnk  <%= cp(new_order_path, true) %>">
            <a href="/orders/new"><span class="glyphicon glyphicon-shopping-cart"></span>CART:<em>(<%= count_products %>)</em>
        </a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <span style="padding-top: 14px; margin-right: 10px; color: green; font-weight: bold; float: left;"><%= current_user.firstname %></span>
          <% if current_user.admin? %>
            <li><%= link_to "Admin panel", rails_admin.dashboard_path %></li>
          <% end %> 
          <li <%= cp(settings_path) %> ><%= link_to "Settings", settings_path %></li>
          <li><%= link_to "Orders", '#' %></li>

          <li <%= cp(destroy_user_session_path) %> >
           <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %>   
        
        <% else %>
          <li <%= cp(new_user_session_path) %> >
            <%= link_to "Log in", new_user_session_path %>
          </li>

          <li <%= cp(new_user_registration_path) %> >
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">

 <% if notice.class === "String" %>
  <div class="alert alert-success fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
 <% end %>

  <% if alert.class === "String" %>
  <div class="alert alert-danger fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
 <% end %>
  
</div>

<div class="container">
<% unless render_breadcrumbs == "" %>
<ol class="breadcrumb">
   <%= render_breadcrumbs :tag => :li, :separator => "" %>
</ol>
<% end %>

  <%= yield %>

</div>

<div style="display:none" id="current_user"><%= current_user.id if current_user %></div>

</body>
</html>
