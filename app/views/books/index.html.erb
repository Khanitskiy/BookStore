<h1><%= t(:title_shop) %></h1>
<div class="col-md-9">
	<% @books.each do |book| %>
		<div class="col-sm-6 col-md-4">
	    <div class="thumbnail">
        <%= link_to "#{image_tag book.image_url :my_resize}".html_safe, book %>
	      <div class="caption">
	        <h5><%= link_to book.title, book %></h5>
	        <h4><%= number_to_currency(book.price) %></h4>
	      </div>
	    </div>
	  </div>
  <% end %>
</div>
<div class="col-md-3">

  <div class="list-group">
    <% @categories.each do |category| %>
      
      <% unless category.id == params[:id].to_i %>
          <%= link_to category.title, category, class: "list-group-item" %>
      <% else %>
          <%= link_to category.title, category, class: "list-group-item active" %>
      <% end %>

    <% end %>
  </div>
  
</div>

<div class="clear"></div>
<div class="text-center">
<%= paginate @books %>
</div> 
