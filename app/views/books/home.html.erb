<h1 class="text-center">
Welcome to our amazing Bookstore!
<br>
<small>Choose anything you wish, we'll ship it anywhere.</small>
</h1>


		<div id="owl-demo" class="owl-carousel home-page-slider owl-theme">
 			<% @bestsellers.each do |bestseller| %>
	 			<div class="container">
					<div class="row">
					  <div class="item">
					  	<div class="row">
						  	<div class="col-md-3">
						  	  <%#= image_tag bestseller.image_url :my_resize %>
						  		<!--<img src="<%= bestseller.image.my_resize %>"  />-->
						  		<%= link_to "#{image_tag bestseller.image_url :my_resize}".html_safe, bestseller %>
						  	</div>
						  	<div class="col-md-5">
							  	<h2>
										<h5><%= link_to bestseller.title, bestseller %></h5><br>
										<small>by Andrew  Evans</small>
									</h2>
							  	<p><%= bestseller.description %></p>
						  		<div class="price">$<%= bestseller.price %></div>
									<%= form_tag("/orders/add_to_order", method: "put") do %>
	                  <%= number_field_tag 'quantity', "1", within: 1...10, class: 'quantity-input' %>
	                  <%#= hidden_field_tag 'book_id', book.id %>
	                  <%= submit_tag "ADD TO CART", class: 'btn btn-primary'  %>
	                <% end %>
						  	</div>
						  </div>
					  </div>
					</div>
				</div>
			<% end %>
		</div>