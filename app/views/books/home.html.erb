<h1 class="text-center">
<%= t(:home_h1) %>
<br>
<small><%= t(:home_h2) %></small>
</h1>
<div id="owl-demo" class="owl-carousel home-page-slider owl-theme">
		<% @bestsellers.each do |bestseller| %>
			<div class="container">
			<div class="row">
			  <div class="item">
			  	<div class="row">
				  	<div class="col-md-3">
				  	  <%#= image_tag bestseller.image_url :my_resize %>
				  		<!--<img src="<%= bestseller.image.my_resize %>"  />-->
				  		<%= link_to "#{image_tag bestseller.image_url :my_resize}".html_safe, bestseller, :class => 'book_id_' << bestseller.id.to_s %>
				  	</div>
				  	<div class="col-md-5">
					  	<h2>
								<%= link_to bestseller.title, bestseller %><br>
								<small>by Andrew  Evans</small>
							</h2>
					  	<p><%= bestseller.description %></p>
				  		<div class="price"><%= number_to_currency(bestseller.price) %></div>
							<%= form_tag("/orders/add_to_order", method: "put") do %>
              <%= number_field_tag 'quantity', "1", within: 1...10, class: 'quantity-input quantity_id_' << bestseller.id.to_s %>
              <%#= hidden_field_tag 'book_id', book.id %>
              <%= submit_tag "ADD TO CART", class: 'btn btn-primary add_book', id: 'button_book_id_' << bestseller.id.to_s  %>
            <% end %>
				  	</div>
				  </div>
			  </div>
			</div>
		</div>
	<% end %>
</div>